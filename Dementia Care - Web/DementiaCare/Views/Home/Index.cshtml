@{
    ViewBag.Title = "Dementia Care";
}

<div class="container-fluid no-padding">
    <div class="row no-margin">
        <div class="col-12 no-padding full-height">
            <img src="~/Images/background.jpg" class="img-fit" alt="Dementia Care" />

            <div class="sticky-top abs-position full-width">
                <img src="~/Images/title.png" class="img-center" alt="" />
            </div>
        </div>
    </div>
    <div class="row no-margin">
        <div class="col-12 no-padding">
            <div class="card bg-dark" style="border:0px; border-radius: 0px;">
                <div class="card-text">
                    <h5 class="text-white text-break text-center calibri-font dc-margin-padding">
                        Dementia is a major health problem in Australia. It has profound consequences for the health and quality of
                        life of people with the condition, as well as for their families and friends.
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row no-margin">
        <div class="col-12 patients-chart">
            <div id="dementiaPopulationChart" class="calibri-font"></div>
        </div>
    </div>
    <div class="row no-margin">
        <div class="col-12 no-padding">
            <div class="card bg-dark" style="border:0px; border-radius: 0px;">
                <div class="card-text">
                    <h5 class="text-white text-break text-center calibri-font dc-margin-padding">
                        At present, there are 400,833 elders living with dementia in Australia and this number is projected to reach 
                        1.1 million people by 2056. Majority of this people – approximately 75% - live in community homes and 90% of 
                        them are cared by family members (spouse/children), where most patients need self-care assistance.
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row no-margin">
        <div class="col-lg-4 no-padding">
            <div class="card" style="border-radius:0px;">
                <img src="~/Images/first.jpg" class="card-img-top" style="border-radius:0px;" alt="Stimulus" />
                <div class="card-body">
                    <h5 class="card-title calibri-font">STIMULUS</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-4 no-padding">
            <div class="card" style="border-radius:0px;">
                <img src="~/Images/second.jpg" class="card-img-top" style="border-radius:0px;" alt="Stimulus" />
                <div class="card-body">
                    <h5 class="card-title calibri-font">PUZZLE</h5>
                </div>
            </div>
        </div>
        <div class="col-lg-4 no-padding">
            <div class="card" style="border-radius:0px;">
                <img src="~/Images/third.jpg" class="card-img-top" style="border-radius:0px;" alt="Stimulus" />
                <div class="card-body">
                    <h5 class="card-title calibri-font">AUGMENTED REALITY</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    Highcharts.chart('dementiaPopulationChart', {
        chart: {
            type: 'area'
        },
        title: {
            text: 'Number of Dementia Patients in Australia'
        },
        xAxis: {
            categories: ['2011', '2012', '2013', '2014', '2015', '2016', '2017', '2018', '2019', '2020'],
            tickmarkPlacement: 'on',
            title: {
                enabled: false
            }
        },
        yAxis: {
            min: 100000,
            title: {
                text: 'Patients'
            }
        },
        tooltip: {
            split: true
        },
        plotOptions: {
            area: {
                stacking: 'normal',
                lineColor: '#666666',
                lineWidth: 1,
                marker: {
                    lineWidth: 1,
                    lineColor: '#666666'
                }
            }
        },
        series: [{
            name: 'Male',
            data: [113300, 118100, 122600, 127000, 131700, 136600, 141600, 146600, 151700, 157000]
        }, {
            name: 'Female',
            data: [184700, 193200, 199100, 204900, 211100, 217200, 223500, 229700, 236100, 242800]
        }]
    });
</script>
